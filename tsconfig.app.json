{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["vite-env.d.ts", "src/**/*", "src/**/*.ts", "src/**/*.vue", "**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "allowImportingTsExtensions": true
  }
}
